// work with script02.groovy
def gv
pipeline {
    agent any
    tools {
        maven 'maven-3.6' //from the tools configartion
    }
    stages {
        stage ("init") {
            steps {
                script {
                    gv = load "script02.groovy"
                }
            }           
        }
        stage("build jar") {
            steps {
                script {
                    gv.buildJar()
                }

            }
        }
        stage('build image') {
            steps {
                script {
                    gv.buildImage()
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    gv.deployApp()
                }
            }
        }        
    }
}
